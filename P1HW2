print("Creating a program")
print()
budget = float(input("Enter your budget: "))
print()
destination = input("Enter your travel destination: ")
print()
gas_expenses = float(input("How much will you spend on gas? "))
print()
accommodation_expenses = float(input("How much for accommodation/hotel? "))
print()
food_expenses = float(input("How much for food? "))
print()
total_expenses = gas_expenses + accommodation_expenses + food_expenses
print()
remaining_balance = budget - total_expenses
print()
print('------Travel Expenses------')
print(f"Expenses for {destination}:")
print()
print(f"Initial Budget: ${budget:.2f}")
print()
print(f"Gas: ${gas_expenses:.2f}")
print()
print(f"Accommodation: ${accommodation_expenses:.2f}")
print()
print(f"Food: ${food_expenses:.2f}")
print()
print(f"Remaining Balance: ${remaining_balance:.2f}")
